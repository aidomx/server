{
  "compilerOptions": {
    "target": "ES2024",
    "module": "NodeNext",
    "declaration": true,
    "outDir": "dist",
    "removeComments": true,
    "strict": true,
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src/**/*"]
  // "exclude": ["node_modules", "**/*.spec.ts"]
}
